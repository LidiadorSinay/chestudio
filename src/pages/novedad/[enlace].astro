---
import Layout from '../../layouts/Layout.astro';
import Navbarlight from "@components/navbar/navbarlight.astro";
import Container from "@components/container.astro";
import { marked } from 'marked';
import Cta from "@components/cta.astro";
import Wh from '@components/wh.astro';
import '../../style/novedades.css';

import novedades from '../../../public/data/novedades.json';

interface Novedad {
  titulo: string;
  descripcion: string;
  fecha: string;
  imagen: string;
  contenido: string;
  enlace: string;
}

export async function getStaticPaths() {
  return novedades.map((n: Novedad) => ({
    params: { enlace: n.enlace },
  }));
}

const { enlace } = Astro.params;
const novedad: Novedad | undefined = novedades.find((n: Novedad) => n.enlace === enlace);

const titulo = novedad?.titulo || "Novedad no encontrada";
const descripcion = novedad?.descripcion || "No se encontró descripción.";
const fecha = novedad?.fecha || "Fecha no disponible.";
const imagen = novedad?.imagen || "/default-image.jpg";
const contenido = novedad?.contenido ? marked(novedad.contenido) : "";
const canonicalURL = `https://chestudioabogados.com/novedad/${enlace}`;

const seo = {
  title: titulo + " | CHESTUDIO",
  description: descripcion,
  canonical: canonicalURL,
  openGraph: {
    basic: {
      url: canonicalURL,
      type: "article",
      title: titulo,
      image: imagen,
      description: descripcion,
    },
    image: {
      url: imagen,
      alt: `Imagen de la novedad: ${titulo}`,
      type: "image/jpeg",
    },
  },
  twitter: {
    title: titulo,
    description: descripcion,
    image: imagen,
  },
};
---

<style is:global>
.markdown-body {
  line-height: 1.75;
  font-size: 1.05rem;
}

.markdown-body h1,
.markdown-body h2,
.markdown-body h3 {
  margin-top: 2rem;
  margin-bottom: 1rem;
  font-weight: 700;
  line-height: 1.3;
}

.markdown-body h1 {
  font-size: 2rem;
}

.markdown-body h2 {
  font-size: 1.5rem;
}

.markdown-body h3 {
  font-size: 1.25rem;
}

.markdown-body p {
  margin-bottom: 1.25rem;
}

.markdown-body ul {
  margin-left: 1.5rem;
  margin-bottom: 1.25rem;
}

.markdown-body li {
  margin-bottom: 0.5rem;
}

.markdown-body a {
  color: #3490dc;
  text-decoration: underline;
}

.markdown-body strong {
  font-weight: 600;
}

.markdown-body hr {
  margin: 2rem 0;
  border: none;
  border-top: 1px solid #ddd;
}
</style>

<Layout seo={seo} title={titulo}>
  <Navbarlight />

  <div class="w-full flex flex-col lg:flex-row">
    <div class="w-full lg:w-1/3 flex items-center justify-center">
      <img src={imagen} alt={titulo} class="w-full h-auto lg:h-full object-contain lg:object-cover" />
    </div>

    <div class="w-full lg:w-2/3 flex items-center justify-center bg-gray-100 py-8 lg:py-0">
      <h1 class="text-3xl lg:text-5xl font-bold text-center text-gray-800 px-12 lg:px-20">{titulo}</h1>
    </div>
  </div>

  <Container>
    <div class="mt-8">
      <p class="text-2xl text-gray-700 font-semibold mb-2">{descripcion}</p>
      <p class="text-sm text-gray-500">{fecha}</p>
    </div>

    <div class="mt-6 markdown-body">
      <div class="text-base text-gray-800" set:html={contenido}></div>
    </div>

    <Cta />
    <Wh phone="5491171387291" />
  </Container>
</Layout>
