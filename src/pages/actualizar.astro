<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Botón Actualizar Webhook</title>
</head>
<body>
  <div style="text-align: center; margin-top: 50px;">
    <h2>Actualizar sitio web</h2>
    <button id="updateButton" style="padding: 10px 20px; font-size: 16px;">Actualizar datos</button>
    <div id="responseMessage" style="margin-top: 20px;"></div>
  </div>

  <script>
    // El webhook de Netlify
    const webhookUrl = 'https://api.netlify.com/build_hooks/6783eb69227cc48642c468c3'; 

    // Función para manejar el clic en el botón
    document.getElementById('updateButton').addEventListener('click', async () => {
      try {
        // Realizar la solicitud POST al webhook
        const response = await fetch(webhookUrl, {
          method: 'POST',  // Solicitud POST
        });

        // Manejar la respuesta
        if (response.ok) {
          document.getElementById('responseMessage').innerHTML = '¡Datos actualizados correctamente!';
        } else {
          throw new Error('Error al actualizar el sitio');
        }
      } catch (error) {
        document.getElementById('responseMessage').innerHTML = `Error: ${error.message}`;
      }
    });
  </script>
</body>
</html>
