---
import { Icon } from "astro-icon";
import featuresData from "../../public/data/features.json"; // Importación del JSON
import Link from "./ui/link.astro";

const features = featuresData; // Directamente usamos el array raíz
---

<style>
  section {
    background-color: var(--color-celeste-light);
  }
  h3 {
    font-family: "Literata";
  }
  h2 {font-family: "Literata", serif;
    font-size: 2.5rem;
    font-weight: 400;}
    
  .material-symbols-outlined {
    font-size: 2.5rem;
    height: fit-content;
  }

  h4{padding-bottom: 4vh;}
 .pill2 {
    box-sizing: border-box;
    background-color: transparent;
    border: 2px solid #1f3a5f;
    border-radius: 4rem;
    font-weight: 600;
    padding: 1.25rem 2.5rem;
    transition: all 0.5s ease-in-out;
    color: #1f3a5f;
  }
  .pill2:hover {
    background-color: var(--color-azul-accent);
    box-shadow: 0 5px 15px #fff;
    color: #fff;
  }
  
  
</style>

<section id="servicios" class="px-5 py-20 text-aa">
  <div class="mt-16 md:mt-0 text-center">
    <h2 class="text-3xl lg:text-3xl lg:tracking-tight">Servicios</h2>
    <h4 class="text-lg mt-4 text-balance">
      Nos desempe&ntilde;amos en las siguientes áreas
    </h4>
        <Link
      id="button"
      href="/servicios"
      class="pill2"
    >
Ver más    </Link>
  </div>

<div class="grid md:grid-cols-2 mx-auto mt-16 gap-y-8 gap-x-5 max-w-5xl justify-items-center">
    {features.map((item) => (
      <div class="flex gap-4 items-top">
        <div class="bg-c rounded-full p-5 w-20 h-20 grid place-content-center shrink-0">
          {item.icon && (
            <span class="material-symbols-outlined">{item.icon}</span>
          )}
          {item.astroIcon && (
            <Icon class="w-10 h-10" name={item.astroIcon} />
          )}
        </div>
        <div class="max-w-xs">
          <h3 class="font-semibold text-lg">{item.title}</h3>
          <p class="font-light mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>
